<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="emp" class="One.Emp">
           <property name="ename" value="luvy"></property>
           <property name="gender" value="nv"></property>

           <property name="department" ref="de"></property>
        </bean>
        <bean id="de" class="One.Department">
            <property name="dname"  value="财务"></property>
        </bean>
</beans>